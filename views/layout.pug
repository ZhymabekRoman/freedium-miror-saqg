block variables
doctype html

html(lang="en" class="h-100")
    head 
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(http-equiv="Content-Language" content="en")
        meta(name="google" content="notranslate")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title VERCEL CORS PROXY
        link(href="./main.css" rel="stylesheet" type="text/css")
        link(href="./cover.css" rel="stylesheet")

    body(class="d-flex h-100 text-bg-dark")
        div(class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column")
            header(class="mb-auto")
                div
                    h3(class="float-md-start mb-0") VERCEL CORS PROXY
                    nav(class="nav nav-masthead justify-content-center float-md-end")
                        a(class="nav-link fw-bold py-1 px-0" href=(link || "configuration")) #{linkText || "Show Configuration"}

            block content
            include footer.pug
        
        script(src="bootstrap.bundle.min.js" type="text/javascript")
